{{> layout/header}}

<div class="container p-5">


    <table class="table table-striped">
        <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>내용</th>
            <th>작성자</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        {{#boardList}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{author}}</td>
            <td>
                <div class="d-flex">
                    <form action="/board/{{id}}/delete" method="post">
                        <button class="btn btn-danger">삭제</button>
                    </form>
                    <form action="/board/{{id}}/updateForm" method="get">
                        <button class="btn btn-warning">수정</button>
                    </form>
                </div>
            </td>
        </tr>
        {{/boardList}}


    </tbody>

    </table>

    <ul class="pagination d-flex justify-content-center">
        <li class="page-item {{#attributes.first}}disabled{{/attributes.first}}"><a class="page-link" href="?page={{attributes.prevPage}}">Previous</a></li>
        {{#attributes.pageNumbers}}
            <li class="page-item"><a class="page-link" href="?page={{.}}">{{.}}</a></li>
        {{/attributes.pageNumbers}}
        <li class="page-item {{#attributes.last}}disabled{{/attributes.last}}"><a class="page-link" href="?page={{attributes.nextPage}}">Next</a></li>
    </ul>
</div>

{{> layout/footer}}